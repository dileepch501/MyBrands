<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AccessoriesActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:title="Accessories Sale"
                app:titleTextColor="@color/white">
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:gravity="top">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    android:id="@+id/imeilayout"
                    app:counterMaxLength="30"
                    app:counterEnabled="true"


                    app:errorEnabled="true"
                    android:paddingTop="3dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/imei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white_greyish"
                        android:drawableLeft="@drawable/imei"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/imei"
                        android:gravity="center_vertical"
                        android:hint="IMEI"
                        android:maxLength="30"
                        android:inputType="text"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/brandlayout"
                    app:counterEnabled="true"

                    app:counterMaxLength="10"
                    android:paddingTop="3dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white_greyish"
                        android:drawableLeft="@drawable/brand"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/brand"
                        android:gravity="center_vertical"
                        android:hint="Brand Name"
                        android:inputType="text"
                        android:padding="15dp"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/modenollayout"
                    app:counterMaxLength="30"
                    app:counterEnabled="true"


                    app:errorEnabled="true"
                    android:paddingTop="3dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/modelno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white_greyish"
                        android:drawableLeft="@drawable/modelnumber"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/modelnumber"
                        android:gravity="center_vertical"
                        android:hint="Model Number"
                        android:maxLength="30"
                        android:inputType="text"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/amountlayout"


                    app:errorEnabled="true"
                    android:paddingTop="3dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white_greyish"
                        android:drawableLeft="@drawable/amount"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/amount"
                        android:gravity="center_vertical"
                        android:hint="Amount"
                        android:maxLength="30"
                        android:inputType="number"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/submit"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_style"
                    android:padding="3dp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>